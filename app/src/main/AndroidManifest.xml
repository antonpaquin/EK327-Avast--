        </activity>
        <activity
            android:name=".Activities.SelfViewActivity"
            android:label="@string/title_activity_self_view" >
        </activity>

        <service
            android:name=".Services.ConnnectionService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".Services.InfectionService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/title_activity_home" >
