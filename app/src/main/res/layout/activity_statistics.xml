<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bilgerat.wizzy.avast.Activities.StatisticsActivity"
    android:background="#000">

    <!--
    LinearLayout (Vertical) with:
        ImageView image of virus
        TextView # of infected
        TextView average % infected
        ImageView graph of infected vs time
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:textColor="#FFF"
            android:textSize="@dimen/title_font_size"
            android:gravity="center"
            android:text="My Statistics"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="0dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:text="Infections over Time"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:text="Number of Infections:"/>

            <TextView
                android:id="@+id/statistics_infected_number"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textColor="#FFF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:text="Average Rate of Infection:"/>

            <TextView
                android:id="@+id/statistics_infected_percent"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textColor="#FFF" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>
